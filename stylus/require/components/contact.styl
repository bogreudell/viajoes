.vj_contact
	background-size cover !important
	padding $margin4 0

	&__section
		width 40%
		margin 0 0 $margin1 auto
		
		&:first-of-type
			bannerSerif($black)
		
		&--title
			subHeader($black)
		
		&--copy
			bodyCopy($black)

@media all and (max-width:$mobile)
	.vj_contact
		a[href^="tel:"]
			color $white !important
			font-weight 600