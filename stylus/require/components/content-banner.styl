.vj_banner
	position relative
	height 75vh

	&.with-image
		background-position center center
		background-size cover
		background-attachment fixed
	
	&__content
		position absolute
		width 90%
		max-width 620px
		verticalAlign(50%,50%,-50%,-50%)
		text-align center
		background $black
		padding $margin2
		
		&--header
			blockHeader($white)
			font-family $serif
		
		&--copy
			margin-top $margin1
			bodyCopy($white)
		
		&--link
			linkStyles($black,$white)

@media all and (max-width:$mobile)
	.vj_banner
		&.with-image
			background-attachment initial
			
		&__content
			&--copy
				bodyCopySmall($white)