body
	&.search
		padding-top 85px
		
		.vj_header
			&__wrapper
				form
					input[type="search"]
						interactive($black,1.4rem)
						border-bottom 1px solid $black
						
						&::placeholder
							color $black
						
			&__logo
				&--image1
					display none !important
				
				&--image2
					display block !important
					height 100%
					width auto

			&__menu
				&--navigation
					li
						a
							color $black !important


		.vj_search
			width 90%
			margin 0 auto $margin3
			text-align center
			
			header
				margin $margin1 auto
				blockHeader($black)
				
			&__result
				a
					subHeader($blue)
			
			.entry-content
				subHeader($black)