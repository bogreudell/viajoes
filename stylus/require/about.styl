body
	&.page-template-template-about
		.vj_summary
			&__content
				&--copy
					bannerSans()
					
					strong
						font-weight 600

			&.with-image
				.vj_summary__content--copy
					color $white !important
					
					h1
						color $white !important

			&:nth-of-type(3)
				.vj_summary__content
					max-width 870px !important
				
		.vj_banner
			&.with-image
				background-attachment initial !important
								
			&__content
				background $green

		.vj_icons
			padding $margin2 0
			background $beige
			
			.vj_icon
				vertical-align middle

@media all and (max-width:$mobile)
	body
		&.page-template-template-about
			.vj_contact
				background-position right
				
				&__section
					width 90%
					margin-left auto
					margin-right auto
					text-align center
			
			.vj_banner
				&.with-image
					background-position 62% center 