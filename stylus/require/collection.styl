body
	&.post-type-archive-product
		.vj_productgrid
			&--desktop
				width 88.5%
				margin $margin1 auto
				
				span
					interactive($black,1.2rem)
					text-transform uppercase
				
				button
					resetButtonStyles($black)
					interactive($black,1.2rem)
					text-transform uppercase
					font-weight 600
					margin 0 0 0 $margin1
					padding-bottom 5px
					
					&.active
						border-bottom 1px solid $black
			
			&--mobile
				display none
				
		.vj_products
			&__thumbnail
				width 24%
			
			&.grid--six
				.vj_products__thumbnail
					width 16%
			
			&.grid--three
				.vj_products__thumbnail
					width 32%
			
			&.grid--two
				.vj_products__thumbnail
					width 49%
			
			&.grid--one
				.vj_products__thumbnail
					width 100%
		
		.woocommerce
			&-breadcrumb
				width 88.5%
				margin $margin2 auto 0
				interactive($black,1.2rem)
				font-weight 600
				
				a
					interactive($black,1.2rem)
					font-weight 200
			
			&-notices-wrapper
				width 88.5%
				margin $margin1 auto
				
			&-pagination
				margin $margin2 0
				text-align center
				
				.page-numbers
					li
						display inline-block
						margin 0 $margin1 0 0
						
						a,
						.current
							interactive($black,1.6rem)
		
		.prdctfltr
			&_wc
				width 88.5%
				margin 0 auto
			
			&_woocommerce_filter
				color $black !important
			
			&_filter_title
				margin-bottom 0
				interactive($black,1.6rem)
			
			&_filter
				interactive($black,1.2rem)
			
			&_pa_collection
				column-count 2

@media all and (max-width:$mobile)
	body
		&.post-type-archive-product
			.vj_productgrid
				&--mobile
					display block
					width 88.5%
					margin $margin1 auto
					
					span
						interactive($black,1.2rem)
						text-transform uppercase
					
					button
						resetButtonStyles($black)
						interactive($black,1.2rem)
						text-transform uppercase
						font-weight 600
						margin 0 0 0 $margin1
						padding-bottom 5px
						
						&.active
							border-bottom 1px solid $black
				
				&--desktop
					display none
				
			.vj_products
				&__thumbnail
					width 49%
				
				&__title
					margin-bottom $margin1
			
			.woocommerce
				&-pagination			
					.page-numbers
						li
							display inline-block
							margin 0 15px 0 0